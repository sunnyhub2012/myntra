<project name="myntra" default="">

	<echo message="ant version:${ant.version}"/>

	<target name="compile" depends="">
		<echo messae="start compiling"/>
		<mkdir dir="class"/>
		<javac srcdir="src" destdir="class"/>
	</target>


	<target name="package" depends="">
		<jar basedir="class" destfile="package/login.jar"/>
	</target>

	<target name="set" depends="">
		<fileset dir="src">
			<include file="**/*.java"/>
		</fileset>
	</target>

	<tstamp>
		<format property="mytime" pattern="MM/dd/yy_mm:ss"/>
	</tstamp>

	<target name="backup" depends="">
		<war destdir="package" destfile="backup/${mytime}_myntra.war"/>
	</target>


	<target name="clean">
		<delete dir="backup"/>
		<delete dir="package"/>
		<delete dir="class"/>
	</target>

</project>
