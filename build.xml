<project name="myntra" default="backup">

	<echo message="ant version:${ant.version}"/>

	<target name="compile">
		<echo message="start compiling"/>
		<mkdir dir="class"/>
		<javac srcdir="src" destdir="class"/>
	</target>


	<target name="package" depends="compile">
		<jar basedir="class" destfile="package/login.jar"/>
	</target>

	<!--target name="set" depends="package">
		<fileset dir="src">
			<include file="**/*.java"/>
		</fileset>
	</target-->

	<tstamp>
		<format property="mytime" pattern="MM/dd/yy_mm:ss"/>
	</tstamp>

	<target name="backup" depends="package">
		<war basedir="package" destfile="backup/${mytime}_myntra.war" needxmlfile="false" />
	</target>


	<target name="clean">
		<delete dir="backup"/>
		<delete dir="package"/>
		<delete dir="class"/>
	</target>

</project>
